{
  "private": true,
  "scripts": {
    "build": "yarn build:ps && yarn build:js",
    "build:ps": "spago bundle-app --main Fulcrum.Main --to fulcrum.js",
    "build:js": "parcel build --no-source-maps fulcrum.js",
    "watch:ps": "spago bundle-app --main Fulcrum.Main --to fulcrum.js --watch",
    "watch:js": "parcel watch --no-hmr --no-source-maps fulcrum.js"
  },
  "dependencies": {
    "@datadog/browser-logs": "^1.12.1"
  },
  "devDependencies": {
    "parcel": "^2.0.0-beta.1",
    "purescript": "^0.13.8"
  }
}
